<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coinsFragment">

    <fragment
        android:id="@+id/coinsFragment"
        android:name="pawel.hn.coinmarketapp.ui.coins.CoinsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_coins" />
    <fragment
        android:id="@+id/walletFragment"
        android:name="pawel.hn.coinmarketapp.ui.wallet.WalletFragment"
        android:label="Wallet"
        tools:layout="@layout/fragment_wallet"/>
    <dialog
        android:id="@+id/addCoinFragmentDialog"
        android:name="pawel.hn.coinmarketapp.ui.addeditdialog.AddCoinFragmentDialog"
        android:label="AddCoinFragmentDialog" >
        <argument
            android:name="walletNumber"
            app:argType="integer" />
    </dialog>
    <fragment
        android:id="@+id/priceNotifyFragment"
        android:name="pawel.hn.coinmarketapp.ui.pricenotify.PriceNotifyFragment"
        android:label="@string/notification" />
    <fragment
        android:id="@+id/walletsFragment"
        android:name="pawel.hn.coinmarketapp.ui.wallet.WalletPagerFragment"
        android:label="WalletPagerFragment" />

    <action android:id="@+id/action_global_addCoinFragmentDialog"
        app:destination="@id/addCoinFragmentDialog" />
</navigation>