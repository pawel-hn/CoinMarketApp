<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coinsFragment">

    <fragment
        android:id="@+id/coinsFragment"
        android:name="pawel.hn.coinmarketapp.ui.coins.CoinsFragment"
        android:label="fragment_coins"
        tools:layout="@layout/fragment_coins" />
    <fragment
        android:id="@+id/walletFragment"
        android:name="pawel.hn.coinmarketapp.ui.portfolio.WalletFragment"
        android:label="fragment_wallet"
        tools:layout="@layout/fragment_wallet">
        <argument
            android:name="coin"
            android:defaultValue="@null"
            app:argType="pawel.hn.coinmarketapp.database.Wallet"
            app:nullable="true" />
        <action
            android:id="@+id/action_walletFragment_to_addCoinFragmentDialog"
            app:destination="@id/addCoinFragmentDialog" />
    </fragment>
    <dialog
        android:id="@+id/addCoinFragmentDialog"
        android:name="pawel.hn.coinmarketapp.ui.portfolio.AddCoinFragmentDialog"
        android:label="AddCoinFragmentDialog" >
        <argument
            android:name="coinWallet"
            app:argType="pawel.hn.coinmarketapp.database.Wallet"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_addCoinFragmentDialog_to_walletFragment"
            app:destination="@id/walletFragment" />
        <argument
            android:name="coinsNamesArray"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </dialog>
</navigation>