<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B2FF59</item>
        <item name="colorPrimaryVariant">#4f83cc</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">#FF4081</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/coinName</item>
    </style>

    <style name="DrawerText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NotificationOnOff">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainListItems">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MPriceChange">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
    </style>

</resources>

